<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<table class="table">
    <tbody>
      <% @trainer.pokemons.each do |p| %>
        <tr>
          <%= render p %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% if @trainer == current_trainer %>
  <%= button_to "Create a new Pokemon!", new_path, :class => "button medium", :method => :get %>
<% end %>